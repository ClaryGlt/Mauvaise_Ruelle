<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_description_page"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:text="title_description_page" />

        <ImageView
            android:id="@+id/image_description_page"
            android:layout_width="match_parent"
            android:layout_height="612dp"
            android:src="@drawable/betonniere_electrique"
            app:srcCompat="@drawable/betonniere_electrique"
            tools:srcCompat="@drawable/betonniere_electrique" />

        <TextView
            android:id="@+id/Description_page"
            android:layout_width="match_parent"
            android:layout_height="458dp"
            android:text="description_page" />

        <Button
            android:id="@+id/button_description_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button test" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>